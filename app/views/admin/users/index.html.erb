<h1>All Users</h1>
<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Role</th>
      <th>Signed Up At</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.admin? ? "Admin" : "User" %></td>
        <td><%= user.created_at.strftime("%b %d, %Y") %></td>
        <td>
          <% if user != current_user %>
            <%= link_to 'Delete', admin_user_path(user), method: :delete, data: { confirm: 'Are you sure?' } %>
          <% else %>
            (you)
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
